{
  "typeAcquisition": {
    "enable": true
  },
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": "./ClientApp",
    "paths": {
      "@components/*": [ "components/*" ],
      "@containers/*": [ "containers/*" ],
      "@store/*": [ "store/*" ],
      "@scripts/*": [ "scripts/*" ],
      "@styles/*": [ "styles/*" ],
      "@bootstrap/css": [ "assets/lib/bootstrap-customized/css/bootstrap.css" ],
      "@bootstrap/js": [ "assets/lib/bootstrap-customized/js/bootstrap.js" ]
    }
  },
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
